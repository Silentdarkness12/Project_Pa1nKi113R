//Flares

Actor Flare_General
{
+NOINTERACTION
+NOGRAVITY
+CLIENTSIDEONLY
renderstyle Add
radius 1
height 1
alpha 0.4
scale 0.4
states
{
	Disappear:
		TNT1 A 0
		Stop
	}
}

