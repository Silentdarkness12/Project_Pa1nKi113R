ACTOR LaserPointer: FastProjectile
{
	Projectile
	-ACTIVATEIMPACT
	-ACTIVATEPCROSS
	+NOTIMEFREEZE
	+DONTSPLASH
	Speed 999
	Radius 1
	Height 1
	States
	{
	Spawn:
//Don't change the following sprite unless you want a beam effect (decreases performance and obstructs your vision)
		TNT1 A 1
		Loop
	Death:
		TNT1 A 0 A_SpawnItemEx("RedDot",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION,0)//red dot visible slightly lower than muzzle-line
		Stop
	}
}